<alfresco-config>
	<config>
		<forms>
			<dependencies>
				<js src="/resources/mail-attachment-share/js/actions/mail-action.js" />
			</dependencies>
		</forms>
	</config>
	
	<config evaluator="string-compare" condition="mail-attachments-send">
		<forms>
			<form>
				<field-visibility>
					<show id="recipient" />
					<show id="subject" />
					<show id="template" />
				</field-visibility>
				<appearance>
					<field id="recipient" label="To" />
					<field id="subject" label="Subject" />
					<field id="template" label="E-mail template" />
				</appearance>
			</form>
		</forms>
	</config>

	<config replace="false" evaluator="string-compare" condition="DocumentLibrary">
		<multi-select>
			<action type="action-link" id="onActionMailAttachment" label="menu.send-mail-attachment"
				asset="document" />
		</multi-select>
	</config>
</alfresco-config>